<%= form_for Business.new do |b| %>

<p>
	<%= b.text_field :business_name, :placeholder => 'Business Name', class: "sign_up_text" %>
</p>

<p>
	<%= b.text_field :industry, :placeholder => 'Industry', class: "sign_up_text" %>
</p>


<p>
	<%= b.text_field :email, :placeholder => 'Your Email', class: "sign_up_text" %>
</p>

<p>
	<%= b.password_field :password, :placeholder => 'New Password', class: "sign_up_text" %>
</p>

<p>
	<%= b.password_field :password_confirmation, :placeholder => 'Re-enter Password', class: "sign_up_text" %>
</p>

<%= b.submit 'Sign Up', :class => "btn-3d red" %>


<% end %>
